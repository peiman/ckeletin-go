{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/scripts/install_tools.sh"
          }
        ]
      }
    ],
    "BeforeToolCall": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bash \"$CLAUDE_PROJECT_DIR\"/scripts/check-commit-msg.sh \"$CLAUDE_TOOL_PARAMETERS\""
          }
        ]
      }
    ]
  }
}
